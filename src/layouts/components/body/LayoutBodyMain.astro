---
import { mergeCssProperty } from '@/utils/css';

export type { Props as LayoutBodyMainProps };
type Props = astroHTML.JSX.Attributes<'main'>;

const attrs = Astro.props;
---

<main
  id={mergeCssProperty('layout-main', attrs.id)}
  class={mergeCssProperty('main transition-fade', attrs.class)}
  {...attrs}
>
  <slot />
</main>

<style scoped lang="scss">
  .main {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    align-items: center;
    align-self: center;
    width: 100%;
    max-width: 800px;
  }

  :global(.is-changing) .transition-fade {
    opacity: 1;
    transition: transition(opacity, short4, ease);
  }
  :global(.is-animating) .transition-fade {
    opacity: 0;
  }
</style>
