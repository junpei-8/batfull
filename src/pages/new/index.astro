---
import Layout from '@/layouts/Layout.astro';
import NewBadThumbnail from './_/NewBadThumbnail.svelte';
import NewBadCaption from './_/NewBadCaption.svelte';
import NewBadSpot from './_/NewBadSpot.svelte';
import NewBadSubmitter from './_/NewBadSubmitter.svelte';
---

<Layout
  main={{
    class: 'page-new',
  }}
>
  <h2 class="h2">BAD を投稿する</h2>

  <NewBadThumbnail client:idle />

  <NewBadCaption client:idle />

  <NewBadSpot client:idle />

  <NewBadSubmitter client:idle />
</Layout>

<style scoped lang="scss">
  :global(.page-new) {
    box-sizing: border-box;
    padding: 0 24px;
  }

  .h2 {
    margin-bottom: 32px;
  }
</style>
